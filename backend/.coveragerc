[run]

branch = True 

cover_pylib = False


include = api/*
omit =

    manage.py

    #mock data folder
    stub_api/*

    */settings.py
    */urls.py
    backend/*

    #backup data file
    backup.json

    */views/modules.py
    */views/schemas.py

    # package file
    api/__init__.py
    api/*/__init__.py

    #test file
    */tests/*

    # admin configuration
    */admin.py
    
    # app configurations
    */apps.py 

    #migrations data
    */migrations/* 


[report]
# dont test __str__ and __repr__ methods
exclude_lines =
    def __str__
    def __repr__

[html]
directory = htmlcov